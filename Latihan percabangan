   }
   else
   }
        cout <<"diskon 25%" << endl;
        total_harga = belanja - (belanja) * 0.25;
        }
    }
    else
    }
        if (belanja >= batas_disko)
        {
        cout <<"diskon 25%" << endl;
        total_harga = belanja - (belanja) * 0.25;
    }
    else
    }
        cout <<"diskon 10%" << endl;
